<Window x:Class="RealEstate.SearchBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealEstate"
        mc:Ignorable="d"
        Title="SearchBar" Height="300" Width="300">
    <Grid Background="#FF00F3FF">
        <TextBox x:Name="SearchArea" HorizontalAlignment="Left" Height="17" Margin="61,98,0,0" TextWrapping="Wrap" Text="Enter in search" VerticalAlignment="Top" Width="117"/>
        <Button x:Name="Search" Content="Search" HorizontalAlignment="Left" Height="17" Margin="196,98,0,0" VerticalAlignment="Top" Width="59" Click="Search_Click"/>
        <TextBlock HorizontalAlignment="Left" Height="26" Margin="84,50,0,0" TextWrapping="Wrap" Text="House search" VerticalAlignment="Top" Width="155" FontSize="20"/>

    </Grid>
</Window>
